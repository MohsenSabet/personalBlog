<div class="container">
    <div class="row">
        <div class="col-md-12">
           <h2>Posts
           <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
           </h2>
          <hr />
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Post ID</th>
                            <th>Title</th>
                            <th>Post Date</th>
                            <th>Category</th>
                            <th>Published</th>
                            <th></th> <!-- Empty column header for the remove button -->
                        </tr>
                    </thead>
                    <tbody>
                        {{#each posts}}
                            <tr>
                                <td>{{this.id}}</td>
                                <td>{{this.title}}</td>
                                <td>{{this.postDate}}</td>
                                <td><a href="/posts?category={{this.post.category}}">{{this.category}}</a></td>
                                <td>{{this.published}}</td>
                                <td>
                                    <!-- Remove button -->
                                    <a href="/posts/delete/{{this.id}}" class="btn btn-danger">Remove</a>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        {{#unless posts}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
    </div>
</div>
